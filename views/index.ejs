<% include ./partials/header %>

<div id="mobileTitle">
	<div id="episode">
		<h1>Upcoming Episodes</h1>
	</div>

	<% for(let i = 0; i < data.length; i++) { %>
		<div id="episode" class="ui raised segment">
			<div class="ui blue compact message">
				<div class="header">Airs in : <%= data[i].days %> days</div>
				<p><%= data[i].firstAired%></p>
				<p><%= data[i].network%> - <%= data[i].airsTime %></p>
			</div>
			<div id="epSeriesInfo">
				<h4><%= data[i].seriesName %></h4>
			</div>
			
			<div id="seriesBanner">
				<a href="/series/<%= data[i].seriesId %>">
				<% if(data[i].banner === '') { %>
					<img id="img" class="ui medium image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png"/>
				<% } else { %>
					<img id="img" class="ui medium image" src="https://www.thetvdb.com/banners/<%= data[i].banner %>"/>
				<% } %>
				</a>
			</div>
			
			<% if(data[i].filename === ''){ %>
				<div id="thumbnail"><img id="img" class="ui rounded medium image" src="/images/no_image.jpg"></div>
			<% } else { %>
				<div id="thumbnail"><img id="img" class="ui rounded medium image" src="https://www.thetvdb.com/banners/<%= data[i].filename %>"></div>
			<% } %>

			<strong><p>
				S<%= data[i].airedSeason%>E<%= data[i].airedEpisodeNumber %> - <em><%= data[i].episodeName %></em>
			</p></strong>
			<% if(data[i].overview === null) { %>
				<div id="overview"><strong>No Description Available</strong></div>
			<% } else { %>
				<div id="overview"><%= data[i].overview %></div>
			<% } %>
		</div>
	<% } %>

</div>

<% include ./partials/footer %>