				    <input type="text" placeholder="Search..." name="search">
				    <i class="search link icon"></i>
	    		</div>
	      	</form>
	   </div>
		<a href="/recent" class="item">Recent</a>
		<a href="/help" class="item">Help</a>
	    <% if(!currentUser){ %>
		    <a href="/login" class="ui right item">Login</a>
		    <a href="/register" class="ui right item">Sign Up</a>
		<% } else { %>
			<div class="ui right item">Signed in as : <%= currentUser.username %></div>
	    	<a href="/logout" class="ui right item">Logout</a>
		<% } %>
	</div>
	<div id="mainDiv" class="pusher">

		<!-- Mobile Top Menu -->
		<div id="sidebarMenu" class="ui container fluid inverted secondary menu">
			<div class="ui fluid container">
				<a class="toc item">
					<i class="sidebar icon"></i>
				</a>
				<a href="/" class="right item">What's Next?</a>
				<a href="/shows" class="item">My Shows</a>
			</div>
		</div>

		<!-- Main Top Menu -->
		<div class="ui inverted top menu">
			<a href="/" class="header item"><i class="film icon"></i>What's Next?</a>
