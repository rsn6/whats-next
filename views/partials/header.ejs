			    <div class="item">
			    	<form action="/results" method="GET">
			      		<div class="ui icon input">
						    <input type="text" placeholder="Search..." name="search">
						    <i class="search link icon"></i>
			    		</div>
			      	</form>
			   </div>
			    <% if(!currentUser){ %>
				    <a href="/login" class="ui item">Login</a>
				    <a href="/register" class="ui item">Sign Up</a>
				<% } else { %>
					<div class="ui item">Signed in as : <%= currentUser.username %></div>
			    	<a href="/logout" class="ui item">Logout</a>
				<% } %>
			</div>
		</div>